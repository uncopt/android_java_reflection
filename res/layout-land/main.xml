<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/holo">
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <fragment
      android:name="com.uncopt.android.tutorials.reflection.InfoFragment"
      android:id="@+id/info_fragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:layout_marginBottom="2dip"
      android:layout_marginRight="2dip"/>
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:layout_marginBottom="2dip">
      <fragment
        android:name="com.uncopt.android.tutorials.reflection.InternalMemoryFragment"
        android:id="@+id/internal_memory_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="2dip"/>
      <fragment
        android:name="com.uncopt.android.tutorials.reflection.SDCardFragment"
        android:id="@+id/sd_card_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    </LinearLayout>
  </LinearLayout>
  <fragment
    android:name="com.uncopt.android.tutorials.reflection.LinkFragment"
    android:id="@+id/uncopt_link_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"/>
  </LinearLayout>
